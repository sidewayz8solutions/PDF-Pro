# PDF-Pro Production Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://pdfpro.com
NEXT_PUBLIC_APP_NAME="PDF-Pro"
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==============================================
# AUTHENTICATION (NextAuth.js)
# ==============================================
NEXTAUTH_URL=https://pdfpro.com
NEXTAUTH_SECRET=your-super-secure-secret-here-min-32-chars

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==============================================
# SUPABASE DATABASE
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database URL (if using direct connection)
DATABASE_URL=postgresql://user:password@host:port/database

# ==============================================
# AWS S3 STORAGE
# ==============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=pdfpro-files
AWS_S3_STATIC_BUCKET=pdfpro-static-assets

# CloudFront CDN
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
CLOUDFRONT_DOMAIN_NAME=cdn.pdfpro.com
CLOUDFRONT_OAI=your-origin-access-identity

# ==============================================
# REDIS CACHE
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Redis Cluster (if using cluster)
REDIS_CLUSTER_NODES=redis-1:6379,redis-2:6379,redis-3:6379

# ==============================================
# STRIPE PAYMENTS
# ==============================================
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs
STRIPE_PRICE_STARTER=price_starter_monthly
STRIPE_PRICE_PROFESSIONAL=price_professional_monthly
STRIPE_PRICE_BUSINESS=price_business_monthly

# ==============================================
# EMAIL SERVICE
# ==============================================
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@pdfpro.com

# Resend (alternative)
RESEND_API_KEY=your-resend-api-key

# SMTP (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key

# API key salt for hashing
API_KEY_SALT=your-api-key-salt

# CSRF secret
CSRF_SECRET=your-csrf-secret

# Rate limiting
IP_WHITELIST=127.0.0.1,::1
IP_BLACKLIST=

# ==============================================
# SSL/TLS CERTIFICATES
# ==============================================
SSL_CERT_PATH=/etc/ssl/certs/pdfpro.crt
SSL_KEY_PATH=/etc/ssl/private/pdfpro.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Let's Encrypt
LETSENCRYPT_EMAIL=admin@pdfpro.com
LETSENCRYPT_DOMAIN=pdfpro.com

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=pdfpro

# LogRocket (session replay)
LOGROCKET_APP_ID=your-logrocket-app-id

# DataDog (monitoring)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Grafana
GRAFANA_PASSWORD=your-grafana-password

# ==============================================
# WEBHOOKS & INTEGRATIONS
# ==============================================
# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Discord notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Alert webhook
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================
# Worker threads
MAX_WORKER_THREADS=4

# File processing
MAX_FILE_SIZE=104857600
MAX_FILES_PER_REQUEST=10
PROCESSING_TIMEOUT=300000

# Cache settings
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_API_ACCESS=true
FEATURE_BATCH_PROCESSING=true
FEATURE_CUSTOM_BRANDING=true
FEATURE_WEBHOOKS=true
FEATURE_ANALYTICS=true

# Debug settings
DEBUG_MODE=false
LOG_QUERIES=false
LOG_PERFORMANCE=true

# ==============================================
# THIRD-PARTY SERVICES
# ==============================================
# PDF processing service (if using external)
PDF_SERVICE_URL=https://api.pdfservice.com
PDF_SERVICE_API_KEY=your-pdf-service-key

# OCR service
OCR_SERVICE_URL=https://api.ocrservice.com
OCR_SERVICE_API_KEY=your-ocr-service-key

# Virus scanning
VIRUS_SCAN_API_KEY=your-virus-scan-key

# ==============================================
# DEPLOYMENT SETTINGS
# ==============================================
# Build settings
BUILD_STANDALONE=true
ANALYZE=false

# Docker settings
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Health check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ==============================================
# BACKUP & RECOVERY
# ==============================================
# Backup storage
BACKUP_S3_BUCKET=pdfpro-backups
BACKUP_RETENTION_DAYS=30

# Database backup
DB_BACKUP_SCHEDULE="0 2 * * *"
DB_BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# ==============================================
# COMPLIANCE & LEGAL
# ==============================================
# GDPR compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365

# Terms and Privacy
TERMS_URL=https://pdfpro.com/terms
PRIVACY_URL=https://pdfpro.com/privacy

# ==============================================
# DEVELOPMENT OVERRIDES
# ==============================================
# Only used in development/staging
DEV_SKIP_AUTH=false
DEV_MOCK_PAYMENTS=false
DEV_DISABLE_RATE_LIMITING=false
